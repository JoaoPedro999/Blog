<!-- posts.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Posts</title>
</head>
<style>
    /* styles.css */

    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }

    h2 {
        color: #333;
    }

    #post-container {
        display: flex;
        flex-wrap: wrap;
    }

    .post {
        background-color: #fff;
        border: 1px solid #ddd;
        padding: 10px;
        margin: 10px;
        width: 300px;
    }

    form {
        max-width: 400px;
        margin: 20px auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    label {
        display: block;
        margin-bottom: 8px;
    }

    input,
    textarea {
        width: 100%;
        padding: 8px;
        margin-bottom: 15px;
        box-sizing: border-box;
    }

    button {
        background-color: #333;
        color: white;
        padding: 10px;
        border: none;
        cursor: pointer;
    }

    a {
        color: #333;
        text-decoration: none;
        display: inline-block;
        margin-top: 10px;
    }
    .create-post-button {
    display: inline-block;
    padding: 10px;
    margin-top: 10px;
    margin-left: 10px;
    background-color: #333;
    color: white;
    text-decoration: none;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

.create-post-button:hover {
    background-color: #555;
}
    
</style>

<body>
    <header>
        <h2 style="text-align: center;">Posts</h2>
        <!-- Add a logout button -->
        <a href="/logout" style="float: right; color: white; text-decoration: none; padding: 10px;">Logout</a>
    </header>

    <div id="post-container">
        <!-- Aqui serão exibidos os posts -->
        <% posts.forEach(post => { %>
            <div class="post">
                <h3>
                    <%= post.name %>
                </h3>
                <p>
                    <%= post.post %>
                </p>
            </div>
        <% }) %>
    </div>

    <!-- Transforme o link "Criar novo post" em um botão estilizado -->
    <a href="/pubform" class="create-post-button">Criar novo post</a>
</body>

</html>